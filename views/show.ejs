<%- include("partials/header") -%>
<link rel="stylesheet" href="css/show.css">
<script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
<%- include("partials/body") -%>
    <div class="container">
        <div id="result">
            <img src="<%= thumbnail %>" width="300" height="auto"><br>
            <div id="des1">
                <i class="fas fa-eye fa-lg"></i>
                <p id="view"><%= views %></p>
            </div>
            <div id="des2">
                <i class="fas fa-clock fa-lg"></i>
                <p id="time"><%= timestamp %></p>
            </div>
        </div>
        <br><br>
        <p id="title">Title: <%= title %></p><br><br>
        <form id = "form" action="/download" method="POST">
            <input type="radio" id="mp3" name="format" value="mp3" required>
            <label for="mp3">Audio</label>
            <input type="radio" id="mp4" name="format" value="mp4" required>
            <label for="mp4">Video</label><br>
            <button class="btn btn-margin" type="submit" name="Download" value="<%= download %>">Download</button>
        </form>
        <!-- <div class="loader"></div> -->
        <a href="/">Go Back</a>
    </div>
<%- include("partials/footer") -%>